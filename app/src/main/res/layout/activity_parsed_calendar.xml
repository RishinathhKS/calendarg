<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E1050505"
    android:layout_height="match_parent"
    tools:context=".parsed_calendar"
    android:orientation="vertical"
    >
    <LinearLayout
        android:padding="5dp"
        android:paddingBottom="40dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#2DFFFFFF"
            android:gravity="center"
            android:onClick="sync"
            android:text="sync with google calendar"
            android:textColor="#CDCDCD"></Button>

        <Button
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="#656565"
            android:textColor="#B2000000"
            android:onClick="showdb"
            android:text="db"></Button>
    </LinearLayout>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/lv"
        android:background="#1BFFFFFF"
        android:descendantFocusability="beforeDescendants"
        app:layout_constraintStart_toStartOf="parent"></ListView>

</LinearLayout>